<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oracle.S20220601.ReviewListMapper">
	
	<select id="bhreviewList" parameterType="int" resultType="Review1">
		select sub.*, room.room_name from room room, (
		select r.*, res.room_num from review r, res res  where r.host_num=res.host_num and r.mem_num=res.mem_num and r.host_num=#{host_num})
		sub where room.host_num=sub.host_num and room.room_num = sub.room_num	
	</select>
	
	<select id="bhrevPhotoList" parameterType="Review1" resultType="RevPhoto">
		select * from revphoto where host_num=#{host_num} and rev_num=#{rev_num}
	</select>  
	
	<select id="hostreview" parameterType="int" resultType="Host">
		select rev_count,host_avg from host where host_num=#{rev_num}
	</select>
	
	<!-- REV_NUM SEQ -->
  	<select id="bhgetRoom_num" resultType="int">
  		SELECT seq_rev_num.currval FROM DUAL
  	</select>
	
	<!-- 리뷰등록 -->
	<insert id="roomInsert" parameterType="Review">
		INSERT INTO review VALUES(#{host_num},seq_rev_num.nextval,#{mem_num},#{rev_content},sysdate,seq_rev_num.nextval,ref,0)
	</insert>
	<!-- 리뷰 사진 등록 -->
	<insert id="storeRevPhotoInsert" parameterType="StoreReview">
	  	INSERT INTO revphoto VALUES(#{host_num},SEQ_REV_NUM.CURRVAL,SEQ_HOST_PHOTO_NUM.nextval,#{rev_photo})
	 </insert>


</mapper>
  
  